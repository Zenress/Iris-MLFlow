name: "iris_classification/v1"

conda_env: configuration/env.yaml

entry_points:
  main:
    parameters:
      graphs: {type: bool, default: False}
    command: python steps/main.py --graphs {graphs}

  ingest:
    command: python steps/ingest.py 
  
  process:
    parameters:
      dataset_path: {type: str}
    command: python steps/process.py --dataset_path {dataset_path}

  train:
    parameters:
      process_run_id: {type: str}
      graphs: {type: bool, default: False}
    command: python steps/train.py --graphs {graphs} --process_run_id {process_run_id}


  validate:
    parameters:
      X_validate_path: artifacts/X_validate_path
      y_validate_path: artifacts/y_validate_path
    command: python steps/validate.py --validatepathX {X_validate_path} --validatepathy {y_validate_path}
