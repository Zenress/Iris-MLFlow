name: "iris_classification/v1"

conda_env: configuration/conda.yaml

entry_points:
  main:
    command: python steps/main.py

  ingest_data:
    command: python steps/ingest.py 
  
  data_processing:
    parameters:
      dataframe_path: path
    command: python steps/process.py --dataframe_path {dataframe_path}

  training:
    parameters:
      graphs: {type: bool, default: False}
    command: python steps/train.py --graphs {graphs}

  validate:
    command: python steps/validate.py
