name: "iris_classification/v1"

conda_env: configuration/env.yaml

entry_points:
  main:
    parameters:
      graphs: {type: bool, default: False}
    command: python steps/main.py --graphs {graphs}

  ingest:
    command: python steps/ingest.py 
  
  process:
    parameters:
      dataset_run_id: {type: str}
    command: python steps/process.py --dataset_run_id {dataset_run_id}

  train:
    parameters:
      process_run_id: {type: str}
    command: python steps/train.py --process_run_id {process_run_id}

  validate:
    parameters:
      process_run_id: {type: str}
    command: python steps/validate.py --process_run_id {process_run_id}
